<div class="banner show">
</div>
<div class="container show">
  <div class="row">
    <div class="rocket-info col-6">
      <div class="rocket-show-card">
        <h3><%= @rocket.name %></h3>
        <%= cl_image_tag @rocket.photo.key, height: 300, width: 520 if @rocket.photo.attached? %>
      </div>
      <div class="rocket-show-card">
        <h5>A little more about this rocket</h5>
        <p class="rocket-show-description"><%= @rocket.description %></p>
      </div>
      <div class="rocket-show-card">
        <%= link_to "Back to rocket list", rockets_path %>
      </div>
    </div>

    <div class="rocket-spec col-3">
      <div class="rocket-show-card">
        <br>
        <br>
        <p>Capacity: <%= @rocket.capacity %> people</p>
        <p>Price: Â£<%= @rocket.price %> per day</p>
        <p>Range: <%= @rocket.range %></p>
        <p>Power: <%= @rocket.power %></p>
      </div> 
    </div>

    <div class="booking col-3">
      <div class="rocket-booking">
        <h5>Book this rocket</h5>
        <%= render 'bookings/form', rocket: @rocket, booking: @booking %>
      </div>
    </div>
  </div>
</div>
